
<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/src/assets/demo/demo.css" rel="stylesheet" />
    <html lang="pt-br">
    <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
    @*-----------------BeginTable-----------------*@
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8" style="bottom:80px;">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h2 class="card-title">Locação de Filmes</h2>
                                <p class="card-category"></p>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">CPF</label>
                                            <input id="inputCpf" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group" style="top:35px;right:20px;">
                                            <span id="btnSearch" class=" material-icons" style="color:purple;" type="button">search</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 form-group">
                                    <div class="card-header card-header-primary">
                                        <h4 class="card-title">Informações do Cliente</h4>
                                        <p class="card-category"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <table>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <h4><b>Nome:</b></h4>
                                                <input id="inputNome" type="text" class="form-control" disabled>
                                            </div>
                                            <div class="col-md-3">
                                                <h4><b>Email:</b></h4>
                                                <input id="inputContatoEmail" type="text" class="form-control" disabled>
                                            </div>
                                            <div class="col-md-3">
                                                <h4><b>Celular:</b></h4>
                                                <input id="inputContatoCelular" type="tel" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <h4><b>Rua:</b></h4>
                                                <input id="inputEndereco" type="text" class="form-control" disabled>
                                            </div>
                                            <div class="col-md-3">
                                                <h4><b>Numero:</b></h4>
                                                <input id="inputEnderecoNumero" type="text" class="form-control" disabled>
                                            </div>
                                            <div class="col-md-3">
                                                <h4><b>Bairro:</b></h4>
                                                <input id="inputEnderecoBairro" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-5">
                                                <h4><b>CEP:</b></h4>
                                                <input id="inputEnderecoCEP" type="text" class="form-control col-6" disabled>
                                            </div>
                                            <div class="col-md-5">
                                                <h4><b>Cidade:</b></h4>
                                                <input id="inputEnderecoCidade" type="text" class="form-control col-6" disabled>
                                            </div>
                                        </div>
                                    </table>
                                </div>
                                <div class="col-md-2 form-group">
                                    <div class="card-header card-header-primary">
                                        <h4 class="card-title">Filmes</h4>
                                        <p class="card-category"></p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Filmes</label>
                                        <select id="inputIdFilme" class="custom-select mr-sm-2">
                                            <option selected>Selecione</option>
                                            <option value="1">IT : A Coisa</option>
                                            <option value="2">John Wick 3: Parabellum</option>
                                            <option value="3">O Homem do Norte</option>
                                        </select>
                                    </div>
                                </div>
                                <button id="btnLocar" type="submit" class="btn btn-primary pull-right">Locar</button>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@*-----------------EndTable-------------*@

<script src="~/js/scripts/jquery.min.js"></script>
<script src="~/js/scripts/popper.js"></script>
<script src="~/js/scripts/bootstrap.min.js"></script>
<script src="~/src/assets/demo/demo.js"></script>
<script src="~/js/controllers/booking.js"></script>
